---
export interface Props {
  videoId: string;
  videoTitle?: string;
}

const { videoId, videoTitle = "Video" } = Astro.props;
---

<lite-youtube videoid={videoId} nocookie="true" videotitle={videoTitle} params="color=white&rel=0">
</lite-youtube>

<script
  type="module"
  src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1.5.0/lite-youtube.js"></script>
